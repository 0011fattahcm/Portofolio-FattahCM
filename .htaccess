# Gunakan mod_rewrite untuk menangani routing SPA
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Arahkan semua request selain file dan folder nyata ke index.html
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^ index.html [L]
</IfModule>

